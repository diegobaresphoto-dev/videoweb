{
  "name": "videoclub-juegos",
  "version": "1.0.0",
  "description": "Aplicación de escritorio para gestión de videoclub de juegos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-packager . \"Biblioteca de Juegos\" --platform=win32 --arch=x64 --out=dist --overwrite"
  },
  "build": {
    "appId": "com.biblioteca.juegos",
    "productName": "Biblioteca de Juegos",
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "electron",
    "videoclub",
    "juegos"
  ],
  "author": "Usuario",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-packager": "^17.1.2"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "g-i-s": "^2.1.7",
    "javascript-barcode-reader": "^0.6.9",
    "jimp": "^1.6.0",
    "node-fetch": "^3.3.2"
  }
}
